{
  "package": {
    "productName": "bupaku",
    "version": "0.1.0"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:3000",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.api",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],      
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
    },
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [ "https://bupaku.deno.dev/{{target}}/{{current_version}}" ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM4QzA4NkJEMDM1MDcyMTkKUldRWmNsQUR2WWJBT002cVVQUWNiUjZMYlVHS3BFUTBwR2VvWWMxT1ZRTFpCYzdnaGZrU081MTAK"
    },
    "allowlist": {
      "fs": {
        "readDir": true
      },
      "dialog": {
        "open": true
      }
    },
    "windows": [
      {
        "title": "bupaku",
        "width": 900,
        "height": 680,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline'"
    }
  }
}
